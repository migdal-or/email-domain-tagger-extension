{
  "manifest_version": 2,
  "name": "Email Domain Tagger",
  "version": "1.1",
  "description": "Insert email with domain-specific tag",
  "icons": {
    "96": "icon-96.svg"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "browser_action": {
    "default_title": "Email Domain Tagger",
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "email-domain-tagger@example.com",
      "data_collection_permissions": {
          "required": ["personallyIdentifyingInfo"]
      }
    }
  }
}
